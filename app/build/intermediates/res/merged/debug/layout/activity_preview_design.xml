<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PreviewDesignActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/template_design_five"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:elevation="8dp"
        card_view:cardCornerRadius="8dp">
        <ImageView
            android:id="@+id/card_background_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/card_background_one"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/card_person_image"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/male_user"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/card_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of Card Holder"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:id="@+id/card_person_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designation"
                    android:textSize="18sp"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@id/card_person_name"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/address_image"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/address"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Region, Country"
                    android:layout_toRightOf="@id/address_image"
                    android:paddingTop="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/website_image"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/website"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.website.com"
                    android:layout_toRightOf="@id/website_image"
                    android:paddingTop="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/mail_image"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/mail"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="card_holder@gmail.com"
                    android:layout_toRightOf="@id/mail_image"
                    android:paddingTop="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp">
                <ImageView
                    android:id="@+id/phone_image"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/phone"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+880 1234 56 78 999"
                    android:layout_toRightOf="@id/phone_image"
                    android:paddingTop="12dp"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/select_design_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:text="Select Design"/>
        <Button
            android:id="@+id/see_more_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:layout_below="@id/select_design_button"
            android:text="See More Designs"/>
        <Button
            android:id="@+id/go_to_test_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:layout_below="@id/see_more_design"
            android:text="Go to test page"/>
        </RelativeLayout>

</LinearLayout>