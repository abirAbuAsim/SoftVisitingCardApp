<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.softvisitingcardapp.activity.CardDetailActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="8dp">
        <ImageView
            android:id="@+id/card_background_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/card_background_one"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/male_user"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of Card Holder"
                    android:textSize="24sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:id="@+id/company_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organization"
                    android:textSize="18sp"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@id/name_text_view"/>
                <TextView
                    android:id="@+id/designation_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designation"
                    android:textSize="18sp"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@id/company_text_view"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp">
                <ImageView
                    android:id="@+id/address_image"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/address"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/address_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Region, Country"
                    android:layout_toRightOf="@id/address_image"
                    android:paddingTop="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp">
                <ImageView
                    android:id="@+id/website_image"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/website"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/website_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.website.com"
                    android:layout_toRightOf="@id/website_image"
                    android:paddingTop="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp">
                <ImageView
                    android:id="@+id/mail_image"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/mail"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/email_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="card_holder@gmail.com"
                    android:layout_toRightOf="@id/mail_image"
                    android:paddingTop="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp">
                <ImageView
                    android:id="@+id/phone_image"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/phone"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/contact_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+880 1234 56 78 999"
                    android:layout_toRightOf="@id/phone_image"
                    android:paddingTop="12dp"/>
                android:paddingTop="12dp"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
<LinearLayout
    android:id="@+id/update_delete_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:layout_below="@id/card"
    android:orientation="horizontal">

    <Button
        android:layout_weight="1"
        android:id="@+id/update_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:text="Update"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/delete_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:text="Delete"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_below="@id/update_delete_layout"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/online_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:text="Online Share"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/offline_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:text="Offline"/>

    </LinearLayout>

</RelativeLayout>
